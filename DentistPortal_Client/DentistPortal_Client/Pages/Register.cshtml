@page
@model DentistPortal_Client.Pages.RegisterModel
@{
    Layout = "Shared/_LoginRegisterLayout";
    <form method="post" asp-page-handler="Create" class="align-content-center col-6 w-25" style="margin:auto;text-align:center;color:#1A2238;">
        <div style="margin-top:100px">
            <div class="form-floating form-outline mb-4">
                <input asp-for="User.Username" class="form-control">
                <label class="form-label">Username</label>
            </div>
            <div class="form-floating form-outline mb-4">
                <input asp-for="User.FirstName" class="form-control">
                <label class="form-label">First Name</label>
            </div>
            <div class="form-floating form-outline mb-4">
                <input asp-for="User.LastName" class="form-control">
                <label class="form-label">Last Name</label>
            </div>
            <div class="form-floating form-outline mb-4">
                <input asp-for="User.Password" class="form-control" type="password">
                <label class="form-label">Password</label>
            </div>
            <div class="form-floating form-outline mb-4">
                <input asp-for="User.RepeatedPassword" class="form-control" type="password">
                <label class="form-label">Repeated Password</label>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text">Profession</label>
                <select class="form-select" asp-for="User.Role">
                    <option value="Doctor">Doctor</option>
                    <option value="Patient">Patient</option>
                    <option value="Student">Student</option>
                </select>
            </div>
            <div class="form-floating form-outline mb-4">
                <input name="prof" class="form-control" type="file" id="floatingPatientPictures" placeholder="PatientPictures">
                <label class="form-label" for="floatingPatientPictures">Upload Clinic Pictures</label>
                <div class="invalid-feedback">
                    Please add the clinic pictures.
                </div>
            </div>
            <button type="submit" class="btn btn-success btn-block mb-3"><i class="bi bi-patch-plus"> Sign up</i></button>
            <div class="text-center">
                <p style="color:#66FCF1">Already have an account? <a class="btn btn-outline-primary" asp-page="/Login">Sign in</a></p>
            </div>
        </div>

    </form>
}
@if (@Model.Msg != null)
{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    if (@Model.Status == "error")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@Model.Msg',
                showConfirmButton: true
            })
        </script>
    }
}
