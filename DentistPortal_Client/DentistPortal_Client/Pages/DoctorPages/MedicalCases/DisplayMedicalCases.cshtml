@page
@model DentistPortal_Client.Pages.DoctorPages.DisplayMedicalCasesModel
@using System.Drawing
@using DentistPortal_Client.DTO
@using System.Net.Http
@using Microsoft.AspNetCore.Http
@using Microsoft.Extensions.DependencyInjection;
@{
    int counter = 0;
    <div>
        <div class="text-center">
            <div class="accordion" id="accordionExample">
                @foreach (var medCase in Model.MedicalCases)
                {
                    if (Model.Pictures is not null)
                        Array.Clear(Model.Pictures);
                    Model.Pictures = medCase.PicturePaths.Split(",").Where(x => !string.IsNullOrEmpty(x)).ToArray();
                    <div class="accordion-item row">
                        <h2 class="accordion-header" id=@("heading"+counter)>
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target=@("#collapse"+@counter) aria-controls=@("collapse"+@counter) aria-expanded="true">
                                @medCase.Diagnosis
                            </button>
                        </h2>
                        <div id=@("collapse"+@counter) class="accordion-collapse collapse" aria-labelledby=@("heading"+@counter) data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <div id=@("carouselExampleControls"+@counter) class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner text-center">
                                        @foreach (var item in Model.Pictures)
                                        {
                                            if (item == Model.Pictures[0])
                                            {
                                                <div class="carousel-item active">
                                                    <img src="data:image/png;base64,@item" alt="..." width="400" height="400" />
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="carousel-item">
                                                    <img src="data:image/png;base64,@item" alt="..." width="400" height="400" />
                                                </div>
                                            }
                                        }
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target=@("#carouselExampleControls"+@counter) data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target=@("#carouselExampleControls"+@counter) data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                                <div class="d-inline-block">
                                    <form asp-page-handler="TakeCase" asp-route-caseId="@medCase.Id" method="post">

                                        @if (medCase.DoctorId == Model.DoctorId)
                                        {
                                            <a class="btn btn-success" style="color:white;margin-top:10px;font-style:normal" asp-page="EditDeleteMedicalCase" asp-route-id="@medCase.Id"><i class="bi bi-pencil-square" style="font-style:normal"> Edit</i></a>
                                        }
                                        <button type="submit" class="btn btn-outline-dark" style="color:white;margin-top:10px;font-style:normal"><i class="bi bi-person-heart" style="font-style:normal;color:black"> Take Case</i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    counter++;
                }
            </div>
        </div>
        <br>
        <!-- Button trigger CreateModal -->
        <div class="text-center">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddMedicalCase">
                <i class="bi bi-plus-circle" style="font-style:normal"> Add Medical Case</i>
            </button>
        </div>
    </div>

    <!-- CreateModal -->
    <div class="modal fade" id="AddMedicalCase" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel" style="color:black">Enter Patient Data</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body modal-lg">
                    <form method="post" enctype="multipart/form-data" class="align-content-center col-6 w-100 needs-validation" style="margin:auto;color:#1A2238;" novalidate>
                        <div class="form-floating form-outline mb-4">
                            <input name="medicalCase.PatientName" class="form-control" id="floatingPatientName" placeholder="PatientName" required>
                            <label class="form-label" for="floatingPatientName">Patient Name</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please fill the patient name.
                            </div>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input name="medicalCase.PatientPhone" class="form-control" id="floatingPatientPhone" placeholder="PatientPhone" required>
                            <label class="form-label" for="floatingPatientPhone">Patient Phone</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please fill the patient phone.
                            </div>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input name="medicalCase.PatientAge" class="form-control" id="floatingPatientAge" placeholder="PatientAge" required>
                            <label class="form-label" for="floatingPatientAge">Pateint Age</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please fill the patient age.
                            </div>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input name="medicalCase.Diagnosis" class="form-control" id="floatingPatientDiagnosis" placeholder="PatientDiagnosis" required>
                            <label class="form-label" for="floatingPatientDiagnosis">Diagnosis</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please fill the patient diagnosis.
                            </div>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <textarea name="medicalCase.Description" class="form-control resize" rows="5" id="floatingPatientDescription" placeholder="PatientDesription" required></textarea>
                            <label class="form-label" for="floatingPatientDescription">Description</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please fill the patient case description.
                            </div>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input name="files" class="form-control" type="file" id="floatingPatientPictures" placeholder="PatientPictures" multiple required>
                            <label class="form-label" for="floatingPatientPictures">Upload Case Pictures</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please add the case pictures.
                            </div>
                        </div>
                        <div class="form-check form-outline mb-4">
                            <input class="form-check-input" type="checkbox" name="medicalCase.AssignedToMe" value="true">
                            <label class="form-check-label">
                                Assign Case to me
                            </label>
                        </div>
                        <div style="text-align:center">
                            <button type="submit" class="btn btn-success btn-block mb-3"><i class="bi bi-patch-plus text-center" style="font-style:normal;"> Add</i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
@if (@Model.Msg != null)
{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    if (@Model.Status == "success")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'success',
                title: '@Model.Msg',
                showConfirmButton: false,
                timer: 1500
            })
        </script>
    }
    else if (@Model.Status == "error")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@Model.Msg',
                showConfirmButton: true
            })
        </script>
    }
}