@page
@model DentistPortal_Client.Pages.DoctorPages.MedicalCases.MyMedicalCasesModel
@{
    int counter = 0;
    <div>
        <div class="text-center">
            <div class="accordion" id="accordionExample">
                @foreach (var medCase in Model.MedicalCases)
                {
                    if (Model.Pictures is not null)
                        Array.Clear(Model.Pictures);
                    Model.Pictures = medCase.PicturePaths.Split(",").Where(x => !string.IsNullOrEmpty(x)).ToArray();
                    <div class="accordion-item row">
                        <h2 class="accordion-header" id=@("heading"+counter)>
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target=@("#collapse"+@counter) aria-controls=@("collapse"+@counter) aria-expanded="true">
                                @medCase.Diagnosis
                            </button>
                        </h2>
                        <div id=@("collapse"+@counter) class="accordion-collapse collapse" aria-labelledby=@("heading"+@counter) data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <div id=@("carouselExampleControls"+@counter) class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner text-center">
                                        @foreach (var item in Model.Pictures)
                                        {
                                            if (item == Model.Pictures[0])
                                            {
                                                <div class="carousel-item active">
                                                    <img src="data:image/png;base64,@item" alt="..." width="400" height="400" />
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="carousel-item">
                                                    <img src="data:image/png;base64,@item" alt="..." width="400" height="400" />
                                                </div>
                                            }
                                        }
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target=@("#carouselExampleControls"+@counter) data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target=@("#carouselExampleControls"+@counter) data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                                @if (!medCase.CaseStatus.Equals("Closed"))
                                {
                                    <div class="d-inline-block">
                                        <form asp-page-handler="Cancel" asp-route-id="@medCase.Id" method="post">
                                            <button type="submit" class="btn btn-danger" style="color:white;margin-top:10px;font-style:normal"><i class="bi bi-x-circle" style="font-style:normal"> Cancel</i></button>
                                            <a class="btn btn-outline-success" style="color:black;margin-top:10px;font-style:normal" asp-page="FinishCase" asp-route-id="@medCase.Id"> Finish</a>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <h1 style="color:green;margin-top:10px;"><i class="bi bi-patch-check"></i></h1>
                                }
                            </div>
                        </div>
                    </div>
                    counter++;
                }
            </div>
        </div>
        <br>
    </div>
}
@if (@Model.Msg != null)
{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    if (@Model.Status == "success")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'success',
                title: '@Model.Msg',
                showConfirmButton: false,
                timer: 1500
            })
        </script>
    }
    else if (@Model.Status == "error")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@Model.Msg',
                showConfirmButton: true
            })
        </script>
    }
}
