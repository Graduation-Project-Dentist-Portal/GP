@page
@using System.IdentityModel.Tokens.Jwt
@using System.Text.Json
@using Microsoft.Extensions.Configuration
@using System.Net.Http
@using Microsoft.Extensions.DependencyInjection;
@using Microsoft.AspNetCore.Http;
@model DentistPortal_Client.Pages.DoctorPages.Clinics.DisplayClinicsModel
@{
    int counter = 0;
    IConfiguration config = new ConfigurationBuilder()
                  .AddJsonFile("appsettings.json")
                  .AddEnvironmentVariables()
                  .Build();
    var httpClient = HttpContext.RequestServices.GetService<IHttpClientFactory>();
    var jwt = new JwtSecurityTokenHandler().ReadJwtToken(HttpContext.Session.GetString("Token"));
    var client = httpClient.CreateClient();
    client.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", HttpContext.Session.GetString("Token"));
    client.BaseAddress = new Uri(config["BaseAddress"]);
    string req;
    List<string> imageUrls = new();
    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-2 row-cols-xl-2 g2">
        @foreach (var clinic in @Model.Clinics)
        {
            imageUrls = new();
            req = string.Empty;
            req = await client.GetStringAsync($"api/get-clinic-pics/{clinic.Id}");
            if (req is not null)
            {
                var options = new JsonSerializerOptions
                    {
                        WriteIndented = true,
                        PropertyNamingPolicy = JsonNamingPolicy.CamelCase,
                        DictionaryKeyPolicy = JsonNamingPolicy.CamelCase
                    };
                imageUrls = JsonSerializer.Deserialize<List<string>>(req, options);
            }
            <div class="col p-2">
                <div class="card h-100 text-center m-3" style="background-color:transparent;border:groove;border-color:#66FCF1;">
                    <div class="card-body">
                        <h5 class="card-title" style="color:black">@clinic.Name</h5>
                        <br>
                        <div class="card-text" style="color:#66FCF1;text-align:left">
                            <div id=@("carouselExampleControls"+@counter) class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner text-center">
                                    @foreach (var image in imageUrls)
                                    {
                                        if (image == imageUrls[0])
                                        {
                                            <div class="carousel-item active">
                                                <img src=@image alt="..." width="400" height="400" />
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img src=@image alt="..." width="400" height="400" />
                                            </div>
                                        }
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target=@("#carouselExampleControls"+@counter) data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target=@("#carouselExampleControls"+@counter) data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        </div>
                        <br>
                        @if (clinic.DoctorId == Model.DoctorId)
                        {
                            <!-- Button trigger edit modal -->
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target=@("#editClinicModal"+@counter)>Edit</button>
                            <!-- Button trigger delete modal -->
                            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target=@("#deleteClinicModal"+@counter)>Delete</button>
                        }
                        else
                        {
                            <a class="btn btn-dark" style="background-color:#1F2833;color:#C5C6C7;margin-top:10px;font-style:normal" asp-page="ViewClinic" asp-route-id="@clinic.Id"><i class="bi bi-eye" style="font-style:normal"> View</i></a>
                        }
                    </div>
                </div>
            </div>

            <!-- Edit Clinic Modal -->
            <div class="modal fade" id=@("editClinicModal"+counter) data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel" style="color:black">Edit Clinic</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body modal-lg">
                            <form method="post" enctype="multipart/form-data" class="align-content-center col-6 w-100 needs-validation" style="margin:auto;text-align:center;color:#1A2238;" novalidate>
                                <input name="clinicDto.DoctorId" value="@clinic.DoctorId" hidden>
                                <input name="id" value="@clinic.Id" hidden>
                                <div class="form-floating form-outline mb-4">
                                    <input name="clinicDto.Name" class="form-control" id="floatingClinicName" placeholder="clinicName" value="@clinic.Name" required>
                                    <label class="form-label" for="floatingClinicName">Clinic Name</label>
                                    <div class="invalid-feedback">
                                        Please fill the clinic name.
                                    </div>
                                </div>
                                <div class="form-floating form-outline mb-4">
                                    <input name="clinicDto.ClinicPhone" class="form-control" id="floatingClinicPhone" placeholder="ClinicPhone" value="@clinic.ClinicPhone" required>
                                    <label class="form-label" for="floatingClinicPhone">Clinic Phone</label>
                                    <div class="invalid-feedback">
                                        Please fill the clinic phone.
                                    </div>
                                </div>
                                <div class="form-floating form-outline mb-4">
                                    <input name="clinicDto.Address" class="form-control" id="floatingClinicAdress" placeholder="ClinicAdress" value="@clinic.Address" required>
                                    <label class="form-label" for="floatingClinicAdress">Clinic Adress</label>
                                    <div class="invalid-feedback">
                                        Please fill the clinic adress.
                                    </div>
                                </div>
                                <div class="form-floating form-outline mb-4">
                                    <input type="time" name="clinicDto.OpenTime" class="form-control" id="floatingClinicOpenTime" placeholder="ClinicOpenTime" value="@clinic.OpenTime.TimeOfDay" required>
                                    <label class="form-label" for="floatingClinicOpenTime">Open Time</label>
                                    <div class="invalid-feedback">
                                        Please fill the open time.
                                    </div>
                                </div>
                                <div class="form-floating form-outline mb-4">
                                    <input type="time" name="clinicDto.CloseTime" class="form-control" rows="5" id="floatingClinicCloseTime" placeholder="ClinicCloseTime" value="@clinic.CloseTime.TimeOfDay" required>
                                    <label class="form-label" for="floatingClinicCloseTime">Close Time</label>
                                    <div class="invalid-feedback">
                                        Please fill the close time.
                                    </div>
                                </div>
                                <div class="form-floating form-outline mb-4">
                                    <textarea name="clinicDto.ClinicDescription" class="form-control resize" rows="5" id="floatingClinicDescription" placeholder="ClinicDescription" required>@clinic.ClinicDescription</textarea>
                                    <label class="form-label" for="floatingClinicDescription">Description</label>
                                    <div class="invalid-feedback">
                                        Please fill the clinic description.
                                    </div>
                                </div>
                                <div id=@("carouselExampleControls") class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner text-center">
                                        @foreach (var item in imageUrls)
                                        {
                                            if (item == imageUrls[0])
                                            {
                                                <div class="carousel-item active">
                                                    <img src=@item alt="..." width="400" height="400" />
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="carousel-item">
                                                    <img src=@item alt="..." width="400" height="400" />
                                                </div>
                                            }
                                        }
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target=@("#carouselExampleControls") data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target=@("#carouselExampleControls") data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                                <div class="form-floating form-outline mb-4">
                                    <input name="clinicDto.CasePictures" class="form-control" type="file" id="floatingPatientPictures" placeholder="PatientPictures" multiple>
                                    <label class="form-label" for="floatingPatientPictures">Upload Clinic Pictures</label>
                                    <div class="invalid-feedback">
                                        Please add the clinic pictures.
                                    </div>
                                </div>
                                <button asp-page-handler="Edit" type="submit" class="btn btn-success btn-block mb-3"><i class="bi bi-pencil-square"> Edit</i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!--Delete Clinic-->
            <div class="modal fade" id=@("deleteClinicModal"+counter) tabindex="-1" aria-labelledby="deleteClinicModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body" style="text-align:center">
                            Are you sure?
                            <br />
                            You won't be able to revert this!
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <form asp-page-handler="Delete" asp-route-id="@clinic.Id" method="post">
                                <button type="submit" class="btn btn-danger" style="margin-right:125px" data-bs-dismiss="modal">Yes, delete it!</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            counter++;
        }
    </div>
    <br />
    <div class="text-center m-4">
        <button style="background-color:#252f3e;color:white;" class="btn" data-bs-toggle="modal" data-bs-target="#AddClinic"><i class="bi bi-plus-circle" style="font-style:normal"> Add Clinic</i></button>
    </div>

    <!-- Create Clinic Modal -->
    <div class="modal fade" id="AddClinic" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel" style="color:black">Enter Clinic Data</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body modal-lg">
                    <form method="post" id="createClinic" enctype="multipart/form-data" class="align-content-center col-6 w-100 needs-validation" style="margin:auto;color:#1A2238;" novalidate>
                        <div class="form-floating form-outline mb-4">
                            <input name="clinicDto.Name" class="form-control" id="floatingClinicName" placeholder="clinicName" required>
                            <label class="form-label" for="floatingClinicName">Clinic Name</label>
                            <div class="invalid-feedback">
                                Please fill the clinic name.
                            </div>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input name="clinicDto.ClinicPhone" class="form-control" id="floatingClinicPhone" placeholder="ClinicPhone" required>
                            <label class="form-label" for="floatingClinicPhone">Clinic Phone</label>
                            <div class="invalid-feedback">
                                Please fill the clinic phone.
                            </div>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input name="clinicDto.Address" class="form-control" id="floatingClinicAdress" placeholder="ClinicAdress" required>
                            <label class="form-label" for="floatingClinicAdress">Clinic Adress</label>
                            <div class="invalid-feedback">
                                Please fill the clinic adress.
                            </div>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input type="time" name="clinicDto.OpenTime" class="form-control" id="floatingClinicOpenTime" placeholder="ClinicOpenTime" required>
                            <label class="form-label" for="floatingClinicOpenTime">Open Time</label>
                            <div class="invalid-feedback">
                                Please fill the open time.
                            </div>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input type="time" name="clinicDto.CloseTime" class="form-control" rows="5" id="floatingClinicCloseTime" placeholder="ClinicCloseTime" required>
                            <label class="form-label" for="floatingClinicCloseTime">Close Time</label>
                            <div class="invalid-feedback">
                                Please fill the close time.
                            </div>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <textarea name="clinicDto.ClinicDescription" class="form-control resize" rows="5" id="floatingClinicDescription" placeholder="ClinicDescription" required></textarea>
                            <label class="form-label" for="floatingClinicDescription">Description</label>
                            <div class="invalid-feedback">
                                Please fill the clinic description.
                            </div>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input name="clinicDto.CasePictures" class="form-control" type="file" id="floatingPatientPictures" placeholder="PatientPictures" multiple required>
                            <label class="form-label" for="floatingPatientPictures">Upload Clinic Pictures</label>
                            <div class="invalid-feedback">
                                Please add the clinic pictures.
                            </div>
                        </div>
                        <div style="text-align:center">
                            <button type="submit" class="btn btn-success btn-block mb-3"><i class="bi bi-patch-plus text-center" style="font-style:normal;"> Add</i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
@if (@Model.Msg != null)
{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    if (@Model.Status == "success")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'success',
                title: '@Model.Msg',
                showConfirmButton: false,
                timer: 1500
            })
        </script>
    }
    else if (@Model.Status == "error")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@Model.Msg',
                showConfirmButton: true
            })
        </script>
    }
}