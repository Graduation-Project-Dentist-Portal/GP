@page
@model DentistPortal_Client.Pages.DoctorPages.DisplayMedicalCasesModel
@using System.Drawing
@using DentistPortal_Client.DTO
@{
    int counter = 0;
    <div>
        <div class="text-center">
            <div class="accordion" id="accordionExample">
                @foreach (var medCase in Model.MedicalCases)
                {
                    if (Model.Pictures is not null)
                        Array.Clear(Model.Pictures);
                    Model.Pictures = medCase.PicturePaths.Split(",").Where(x => !string.IsNullOrEmpty(x)).ToArray();
                    <div class="accordion-item row">
                        <h2 class="accordion-header" id=@("heading"+counter)>
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target=@("#collapse"+@counter) aria-controls=@("collapse"+@counter) aria-expanded="true">
                                @medCase.Diagnosis
                            </button>
                        </h2>
                        <div id=@("collapse"+@counter) class="accordion-collapse collapse" aria-labelledby=@("heading"+@counter) data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <div id=@("carouselExampleControls"+@counter) class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner text-center">
                                        @foreach (var item in Model.Pictures)
                                        {
                                            if (item == Model.Pictures[0])
                                            {
                                                <div class="carousel-item active">
                                                    <img src="data:image/png;base64,@item" alt="..." width="400" height="400" />
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="carousel-item">
                                                    <img src="data:image/png;base64,@item" alt="..." width="400" height="400" />
                                                </div>
                                            }
                                        }
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target=@("#carouselExampleControls"+@counter) data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target=@("#carouselExampleControls"+@counter) data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    counter++;
                }
            </div>
        </div>
        <br>
        <!-- Button trigger modal -->
        <div class="text-center">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddMedicalCase">
                Add Medical Case
            </button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="AddMedicalCase" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel" style="color:black">Enter Patient Data</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body modal-lg">
                    <form method="post" enctype="multipart/form-data" class="align-content-center col-6 w-100" style="margin:auto;text-align:center;color:#1A2238;">
                        <input name="token" value=@Model.Token hidden>
                        <div class="form-floating form-outline mb-4">
                            <input name="medicalCase.PatientName" class="form-control">
                            <label class="form-label">Patient Name</label>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input name="medicalCase.PatientPhone" class="form-control">
                            <label class="form-label">Patient Phone</label>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input name="medicalCase.PatientAge" class="form-control">
                            <label class="form-label">Pateint Age</label>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input name="medicalCase.Diagnosis" class="form-control">
                            <label class="form-label">Diagnosis</label>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <textarea name="medicalCase.Description" class="form-control" rows="5"></textarea>
                            <label class="form-label">Description</label>
                        </div>
                        <div class="form-floating form-outline mb-4">
                            <input name="files" class="form-control" type="file" multiple>
                            <label class="form-label">Upload Case Pictures</label>
                        </div>
                        <button type="submit" class="btn btn-success btn-block mb-3"><i class="bi bi-patch-plus"> ADD</i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@if (@Model.Msg != null)
{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    if (@Model.Status == "success")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'success',
                title: '@Model.Msg',
                showConfirmButton: false,
                timer: 1500
            })
        </script>
    }
    else
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@Model.Msg',
                showConfirmButton: false,
                timer: 1500
            })
        </script>
    }
}