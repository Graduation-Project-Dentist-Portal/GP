        <form method="post" enctype="multipart/form-data">
            <div class="card">
                <div class="form">
                    <h3>Register</h3>
                    <div class="input-field">
                        <i class="fa fa-envelope"></i>
                        <input asp-for="patient.Username" required placeholder="Username">
                    </div>

                    <div class="input-field">
                        <i class="fa fa-envelope"></i>
                        <input asp-for="patient.FirstName" required placeholder="First Name">
                    </div>
                    <div class="input-field">
                        <i class="fa fa-envelope"></i>
                        <input asp-for="patient.LastName" required placeholder="Last Name">
                    </div>
                    <div class="input-field">
                        <input asp-for="patient.ProfilePicture" type="file">
                    </div>
                    <div class="input-field">
                        <i class="fa fa-lock"></i>
                        <input asp-for="patient.PasswordHash" type="password" required placeholder="Enter your password">
                    </div>
                    <br>
                    <button type="submit">Register</button>
                    <p>Already have an account? <a asp-page="/Login">Sign in</a></p>
                </div>
                <div class="image">
                    <div class="overlay">
                        <!--  <h3>Every new friend is a<br>new adventure</h3>
                          <p>let's get connected</p> -->
                    </div>
                </div>
            </div>
        </form>

