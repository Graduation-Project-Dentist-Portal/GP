@page
@model DentistPortal_Client.Pages.RegisterAsPatientModel
@{
    Layout = "Shared/_LoginRegisterLayout";

    <div style="margin-top:100px">
        <form method="post" class="align-content-center col-6 w-25" style="margin:auto;text-align:center;color:#1A2238;" enctype="multipart/form-data">
            <div class="form-floating form-outline mb-4">
                <input asp-for="patient.Username" class="form-control" required>
                <label class="form-label">Username</label>
            </div>
            <div class="form-floating form-outline mb-4">
                <input class="form-control" asp-for="patient.FirstName" required>
                <label class="form-label">First Name</label>
            </div>
            <div class="form-floating form-outline mb-4">
                <input asp-for="patient.LastName" class="form-control" required>
                <label class="form-label">Last Name</label>
            </div>
            <div class="form-floating form-outline mb-4">
                <input asp-for="patient.PasswordHash" class="form-control" type="password" required>
                <label class="form-label">Password</label>
            </div>
            <div class="form-floating form-outline mb-4">
                <input asp-for="patient.ProfilePicture" class="form-control" type="file">
                <label class="form-label">Profile Picture</label>
            </div>
            <button type="submit" class="btn btn-success btn-block mb-3"><i class="bi bi-patch-plus"> Sign up</i></button>
            <div class="text-center">
                <p style="color:#66FCF1">Already have an account? <a class="btn btn-outline-primary" asp-page="/Login">Sign in</a></p>
            </div>
        </form>
    </div>
}

@if (@Model.Msg != null)
{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    if (@Model.Status == "error")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@Model.Msg',
                showConfirmButton: true
            })
        </script>
    }
}